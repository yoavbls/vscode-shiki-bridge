// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Example",
			"type": "extensionHost",
			"request": "launch",
			"preLaunchTask": "npm: watch:esbuild",
			"cwd": "${workspaceFolder}/example/vscode-shiki-bridge-example-extension",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/example/vscode-shiki-bridge-example-extension",
				"${workspaceFolder}/example/vscode-shiki-bridge-example-extension"
			],
			"outFiles": [
				"${workspaceFolder}/example/vscode-shiki-bridge-example-extension/dist/**/*.cjs"
			]
		},
		{
			"name": "Run Example (all extensions disabled)",
			"type": "extensionHost",
			"request": "launch",
			"preLaunchTask": "npm: watch:esbuild",
			"cwd": "${workspaceFolder}/example/vscode-shiki-bridge-example-extension",
			"args": [
                "--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}/example/vscode-shiki-bridge-example-extension",
				"${workspaceFolder}/example/vscode-shiki-bridge-example-extension"
			],
			"outFiles": [
				"${workspaceFolder}/example/vscode-shiki-bridge-example-extension/dist/**/*.cjs"
			]
		},
		{
			"name": "Run Advanced Example",
			"type": "extensionHost",
			"request": "launch",
			"preLaunchTask": "npm: watch:esbuild-advanced",
			"cwd": "${workspaceFolder}/example/vscode-shiki-bridge-advanced-example-extension",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/example/vscode-shiki-bridge-advanced-example-extension",
				"${workspaceFolder}/example/vscode-shiki-bridge-advanced-example-extension/examples"
			],
			"outFiles": [
				"${workspaceFolder}/example/vscode-shiki-bridge-advanced-example-extension/dist/**/*.cjs"
			]
		},
		{
			"name": "Run Advanced Example (all extensions disabled)",
			"type": "extensionHost",
			"request": "launch",
			"preLaunchTask": "npm: watch:esbuild-advanced",
			"cwd": "${workspaceFolder}/example/vscode-shiki-bridge-advanced-example-extension",
			"args": [
                "--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}/example/vscode-shiki-bridge-advanced-example-extension",
				"${workspaceFolder}/example/vscode-shiki-bridge-advanced-example-extension/examples"
			],
			"outFiles": [
				"${workspaceFolder}/example/vscode-shiki-bridge-advanced-example-extension/dist/**/*.cjs"
			]
		}
	]
}